<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="develops.mad.billingapp.FinalBill"
    android:background="@color/button_material_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Check Out:"
        android:id="@+id/textView6"
        android:textStyle="bold|italic"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Items"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="35dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity"
        android:id="@+id/textView8"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price"
        android:id="@+id/textView9"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/billP1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Apples"
        android:id="@+id/textitem1"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="23dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Grapes"
        android:id="@+id/textitem2"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textitem1"
        android:layout_alignStart="@+id/textitem1"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="WaterMelon"
        android:id="@+id/textitem3"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textitem2"
        android:layout_alignStart="@+id/textitem2"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Oranges"
        android:id="@+id/textitem4"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal"
        android:layout_below="@+id/textitem3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billQty1"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal"
        android:layout_alignTop="@+id/textitem1"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billQty2"
        android:layout_alignTop="@+id/textitem2"
        android:layout_alignStart="@+id/billQty1"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billQty3"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal"
        android:layout_alignTop="@+id/textitem3"
        android:layout_alignStart="@+id/billQty2" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billQty4"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textStyle="normal"
        android:layout_above="@+id/totalLabel"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billP1"
        android:textStyle="normal"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_marginStart="63dp"
        android:layout_alignTop="@+id/billQty1"
        android:layout_toEndOf="@+id/textView8"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billP2"
        android:layout_alignTop="@+id/billQty2"
        android:layout_alignStart="@+id/billP1"
        android:textStyle="normal"
        android:textColor="@color/abc_primary_text_material_dark"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billP3"
        android:textStyle="normal"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/billQty3"
        android:layout_alignStart="@+id/billP2"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/billP4"
        android:textStyle="normal"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_above="@+id/totalLabel"
        android:layout_alignStart="@+id/billP3"
        android:maxLines="1"
        android:singleLine="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Back to Select"
        android:id="@+id/buttonBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Bill"
        android:id="@+id/buttonGen"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/finalAmt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Grand Total:"
        android:id="@+id/totalLabel"
        android:layout_marginTop="46dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_below="@+id/textitem4"
        android:layout_toStartOf="@+id/totalBill" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalBill"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/totalLabel"
        android:layout_alignStart="@+id/billP4"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Discount: "
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_alignTop="@+id/discAmt"
        android:layout_toStartOf="@+id/discAmt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Final Price: "
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_below="@+id/textView10"
        android:layout_toStartOf="@+id/discAmt" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/discAmt"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/totalBill"
        android:layout_alignStart="@+id/totalBill"
        android:singleLine="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/finalAmt"
        android:textStyle="bold"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_below="@+id/discAmt"
        android:layout_alignStart="@+id/discAmt"
        android:singleLine="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:src="@drawable/cart"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView8" />
</RelativeLayout>
