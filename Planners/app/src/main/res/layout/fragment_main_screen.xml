<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="develops.mad.planners.MainScreen$PlaceholderFragment">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Today&apos;s Tasks"
        android:id="@+id/task_label_mainscr"
        android:layout_alignParentStart="true"
        android:foreground="@color/abc_background_cache_hint_selector_material_dark"
        android:textColor="@color/abc_search_url_text_selected" />

    <ListView
        android:layout_width="185dp"
        android:layout_height="180dp"
        android:id="@+id/remind_list"
        android:layout_below="@+id/task_list"
        android:layout_alignStart="@+id/task_list"
        android:layout_marginTop="50dp" />

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:id="@+id/progressEfficient"
        android:animationResolution="@android:integer/config_mediumAnimTime"
        android:layout_below="@+id/efficiencyLabel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/efficient_bar_title"
        android:id="@+id/efficiencyLabel"
        android:textColor="@color/abc_search_url_text_selected"
        android:layout_marginTop="53dp"
        android:layout_alignTop="@+id/task_list"
        android:layout_alignStart="@+id/progressEfficient" />

    <ListView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:id="@+id/task_list"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/task_label_mainscr"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Today&apos;s Reminders"
        android:id="@+id/reminder_label_mainscr"
        android:textColor="@color/abc_search_url_text_selected"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
