<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="develops.mad.productmanager.AddProduct">

    <TextView
        android:text="Date of Mfg:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/itemsLabel" />

    <TextView
        android:text="Price: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/prodPrice"
        android:layout_alignBottom="@+id/prodPrice"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/prodName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:layout_above="@+id/prodPrice"
        android:layout_alignStart="@+id/prodPrice" />

    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginStart="40dp"
        android:layout_alignBaseline="@+id/prodName"
        android:layout_alignBottom="@+id/prodName"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:id="@+id/addButton"
        android:layout_below="@+id/prodDate"
        android:layout_alignStart="@+id/itemsLabel"
        android:textColor="#4e7c08" />

    <Button
        android:text="DELETE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:id="@+id/deleteButton"
        android:layout_alignBaseline="@+id/addButton"
        android:layout_alignBottom="@+id/addButton"
        android:layout_alignEnd="@+id/prodName"
        android:textColor="#4e7c08" />

    <TextView
        android:text="Add a New Product"
        android:layout_marginTop="22dp"
        android:id="@+id/pageTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_orange_light"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_width="270dip"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_height="40dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/prodDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="150dp"
        android:text="MM/YY"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/addButton"
        android:layout_marginStart="12dp" />

    <EditText
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/prodPrice"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="Price"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:layout_width="200dp"
        android:layout_above="@+id/prodDate"
        android:layout_toEndOf="@+id/addButton" />

    <Button
        android:text="UPDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateButton"
        android:textColor="#4e7c08"
        android:layout_alignBaseline="@+id/addButton"
        android:layout_alignBottom="@+id/addButton"
        android:layout_alignStart="@+id/addButton" />
</RelativeLayout>
