<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="develops.mad.productmanager.MainActivity">

    <Button
        android:text="View All Products"
        android:layout_height="wrap_content"
        android:id="@+id/ShowAllButton"
        android:layout_width="180dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#4e7c08" />

    <Button
        android:text="Order Products"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/OrderButton"
        android:layout_below="@+id/AddScreenButton"
        android:layout_alignStart="@+id/AddScreenButton"
        android:textColor="#4e7c08" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/cart_logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ShowAllButton" />

    <Button
        android:text="Add Products"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/AddScreenButton"
        android:layout_below="@+id/ShowAllButton"
        android:layout_alignStart="@+id/ShowAllButton"
        android:textColor="#4e7c08" />
</RelativeLayout>
