<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    tools:context="develops.mad.productmanager.OrderPage">

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Items"
        android:id="@+id/textView8"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/pg_title_order"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_width="100dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Qty."
        android:id="@+id/textView9"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Products"
        android:id="@+id/pg_title_order"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="25dp"
        android:typeface="sans"
        android:textStyle="bold|italic"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cart_logo"
        android:layout_marginBottom="23dp"
        android:id="@+id/checkoutButton"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:elevation="24dp"
        android:background="#00aaaaaa"
        android:tint="@android:color/holo_green_light" />

    <Spinner
        android:layout_height="30dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/item1"
        android:layout_width="140dp" />

    <Spinner
        android:layout_height="30dp"
        android:layout_marginTop="21dp"
        android:id="@+id/item2"
        android:layout_width="140dp"
        android:layout_below="@+id/qty1"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_height="30dp"
        android:layout_marginTop="21dp"
        android:id="@+id/item3"
        android:layout_width="140dp"
        android:layout_below="@+id/item2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_height="30dp"
        android:layout_marginTop="19dp"
        android:id="@+id/item4"
        android:layout_width="140dp"
        android:layout_below="@+id/item3"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_height="30dp"
        android:id="@+id/qty1"
        android:layout_alignTop="@+id/item1"
        android:layout_alignStart="@+id/textView9"
        android:layout_width="60dp" />

    <Spinner
        android:layout_height="30dp"
        android:id="@+id/qty2"
        android:layout_width="60dp"
        android:layout_alignTop="@+id/item2"
        android:layout_alignStart="@+id/qty1" />

    <Spinner
        android:layout_height="30dp"
        android:id="@+id/qty4"
        android:layout_width="60dp"
        android:layout_alignTop="@+id/item4"
        android:layout_alignStart="@+id/qty3" />

    <TextView
        android:text="TextView"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/itemPrice2"
        android:layout_alignTop="@+id/qty2"
        android:layout_alignStart="@+id/itemPrice1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/qty3"
        android:layout_alignStart="@+id/itemPrice2"
        android:id="@+id/itemPrice3"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textAlignment="center" />

    <Spinner
        android:layout_height="30dp"
        android:id="@+id/qty3"
        android:layout_width="60dp"
        android:layout_alignTop="@+id/item3"
        android:layout_alignStart="@+id/qty2" />

    <TextView
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price/Item"
        android:id="@+id/textView12"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/checkoutButton"
        android:layout_marginStart="13dp"
        android:layout_width="90dp" />

    <ImageButton
        app:srcCompat="@drawable/shop_item"
        android:id="@+id/homeButton2"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#03ffffff"
        android:layout_alignBottom="@+id/checkoutButton"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:text="-- Home    Order --"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold|italic"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/homeButton2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/itemPrice4"
        android:layout_alignTop="@+id/qty4"
        android:layout_alignStart="@+id/itemPrice3"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="70dp"
        android:id="@+id/itemPrice1"
        android:textColor="@android:color/black"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/qty1"
        android:layout_alignStart="@+id/textView12" />
</RelativeLayout>
