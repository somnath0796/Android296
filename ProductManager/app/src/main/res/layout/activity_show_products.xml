<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="develops.mad.productmanager.ShowProducts">

    <ImageButton
        app:srcCompat="@drawable/shop_item"
        android:id="@+id/homeButton"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#03ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Home" />

    <TextView
        android:text="Home"
        android:layout_height="40dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:typeface="sans"
        android:layout_width="60dp"
        android:layout_below="@+id/homeButton"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <ListView
        android:layout_height="400dp"
        android:layout_width="350dp"
        android:id="@+id/product_list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="All Products"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:typeface="serif"
        android:layout_marginStart="26dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/homeButton" />

    <Button
        android:text="Clear All"
        android:layout_height="40dp"
        android:id="@+id/clearAll"
        style="@style/Widget.AppCompat.Button.Small"
        android:textSize="12sp"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_width="100dp"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/product_list"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
